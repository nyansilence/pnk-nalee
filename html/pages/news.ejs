<section class="mod-news">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="news-list">
                    <% for (var i = 1; i < 5; i++) { %>
                    <div class="news-item">
                        <div class="news-item_img" style="background-image: url(./img/new<%= i %>.png);">
                        </div>
                        <p class="news-item_title">
                            tin tức <%= i %>
                        </p>
                        <p class="news-item_content">
                            Lorem ipsum dolor sit amet consectetur adipisicing elit. Sit ducimus architecto dolore cupiditate eveniet nesciunt temporibus vel vitae maiores odit?
                        </p>
                        <a href="" class="btn btn-bg btn-orange news-item_detail">
                            xem thêm
                        </a>
                    </div>
                    <% } %>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="news-sidebar">
                    <div class="news-search">
                        <p class="news-sidebar_title">
                            Tìm Kiếm
                        </p>
                        <input type="text" class="news-search_input">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>